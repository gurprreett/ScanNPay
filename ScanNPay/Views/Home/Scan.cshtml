@{
    ViewData["Title"] = "Scan QR code";
    var todaysdate = DateTime.Now.ToString("dd-MMM-yyyy");
}
<div class="text-center">
    <h1 class="display-4">Scan QR code</h1>
    @using (Html.BeginForm("Scan", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="form-group">
            <strong>Transaction date :- @todaysdate</strong>
        </div>
        <div class="form-group">
            <img src="~/qr-code.jpg" width="70%" height="70%" />
        </div>
        <div class="form-group">
            <input type="text" name="CouponCode" required placeholder="Enter code number" class="form-control" />
        </div>
        <div class="form-group" style="padding:10px;">
            <input type="submit" name="btnSubmit" value="Submit" class="form-control btn btn-primary" />
        </div>
    }
</div>