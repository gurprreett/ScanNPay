@{
    ViewData["Title"] = "Login";
}
@model ScanNPay.Models.LoginViewModel
<div class="text-center">
    <h1 class="bg-dark">
        <img src="~/logo.png" width="100px;" />
    </h1>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <div class="form-group" style="padding:10px;">
            <img src="~/Login.jfif" width="50%" height="50%" />
        </div>
        <div class="form-group" style="padding:10px;">
            @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", @placeholder = "Enter mobile number", @inputmode = "numeric", @pattern = "[789][0-9]{9}" })
            @Html.ValidationMessageFor(m => m.MobileNumber)
        </div>
        @if(Model.IsDisplayOTP)
        {
            <div class="form-group" style="padding:10px;">
                @Html.TextBoxFor(m => m.OneTimePasscode, new { @class = "form-control", @placeholder = "Enter one time password", @inputmode = "numeric", @pattern = "[0-9]{4}" })
                @Html.ValidationMessageFor(m => m.OneTimePasscode)
            </div>
        }
        @if (Model.IsDisplayOTP)
        {
            <div class="form-group" style="padding:10px;">
                <input type="submit" name="btnSubmit" value="Verify OTP" class="btn btn-primary"  />
            </div>
        }
        else
        {
            <div class="form-group" style="padding:10px;">
                <input type="submit" name="btnSubmit" value="Get OTP" class="btn btn-primary" />
            </div>
        }
    }
</div>
